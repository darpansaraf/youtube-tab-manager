/*This file contains info about what the extension is going to do.
It also states the various permissions the extension is going to use in order to achieve
the desired functionality.
This file also provides metadata extension.
*/

{
	"manifest_version" : 2,
	"name":"Getting started Example.",
	"description": "Extension to interact with youtube.",
	"version" : "1.0",

	"browser_action":{
		"default_icon":"icon.png",
		"default_popup":"popup.html"
	},

	"permissions" : [
			"activeTab",
			"tabs",
			"https://ajax.googleapis.com/",
			"https://*/"
	],

	"content_scripts": [
	  {
	  	"matches":["https://*.youtube.com/*"],
	    "js": ["content.js","jquery-3.2.1.min.js","styles.css","bootstrap.min.css"]
	  }
	]
}

